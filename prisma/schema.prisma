generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Jugadores {
  id            Int     @id @default(autoincrement())
  name          String
  pos1          String
  pos2          String
  level         Int
  selected      Boolean @default(false)
  captain       Boolean @default(false)
  captain_count Int     @default(0)
  isBot         Boolean @default(false)
}

model Bots {
  id       Int     @id @default(autoincrement())
  name     String
  pos1     String
  pos2     String
  level    Int
  selected Boolean @default(false)
  isBot    Boolean @default(true)
}

model Sorteos {
  id       Int      @id @default(autoincrement())
  fecha    DateTime @default(now())
  capitan1 String
  capitan2 String
}

model Partidos {
  id                Int      @id @default(autoincrement())
  fecha             DateTime @default(now())
  capitan_equipo1   String   // Solo puede ser un jugador (nunca bot)
  capitan_equipo2   String   // Solo puede ser un jugador (nunca bot)
  jugadores_equipo1 String   // JSON: ["Juan", "Bot1", "Carlos"]
  jugadores_equipo2 String   // JSON: ["Luis", "Bot2", "Pedro"]
}
